{% extends 'base.html.twig' %}

{% block title %}CarrouselController!
{% endblock %}

{% block body %}

	<div id="slider" class="carousel slide" data-bs-ride="carousel" class= "mt-1 d-block w-50 h-50" >
		
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="{{ asset('images/hotelext.jpg')}}" class="d-block h-100 w-50">
				<div class="carousel-caption d-none d-md-block"></div>
			</div>
			<div class="carousel-item">
				<img src="{{ asset('images/hotelext2.jpg')}}" class="d-block h-100 w-50">
				<div class="carousel-caption d-none d-md-block"></div>
			</div>
			<div class="carousel-item">
				<img src="{{ asset('images/restaurant.jpg')}}" class="d-block h-100 w-50">
				<div class="carousel-caption d-none d-md-block"></div>
			</div>
			<div class="carousel-item">
				<img src="{{ asset('images/seminaire2.jpg')}}" class="d-block h-100 w-50" >
				<div class="carousel-caption d-none d-md-block"></div>
			</div>
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#slider" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Précédent</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#slider" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Suivant</span>
		</button>

	
         

	{% endblock %}
